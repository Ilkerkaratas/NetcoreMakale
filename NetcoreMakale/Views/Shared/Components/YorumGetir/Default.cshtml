@model List<EntityLayer.Yorum>
<h6 class="mt-5 mb-3 text-center"><a href="#" class="text-dark">Comments @Model.Count()</a></h6>
<hr>
@foreach (var item in Model)
{

    <div class="media mt-4">
        <div class="media-body">

            @await Component.InvokeAsync("GetYorum_User", new { yorum = item })
            <p>@item.yorum_text</p>

        </div>
    </div>

}

