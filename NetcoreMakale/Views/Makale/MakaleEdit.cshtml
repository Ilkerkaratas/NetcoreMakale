@model EntityLayer.Makale
@{
    ViewData["Title"] = "MakaleEdit";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="pd-20 card-box mb-30">
    <form method="post" asp-controller="Makale" asp-action="MakaleEdit" enctype="multipart/form-data">
        <div class="form-group row">
            <input type="hidden" asp-for="UserID" value="@Model.UserID" />
            <input type="hidden" asp-for="MakaleID" value="@Model.MakaleID" />
            <input type="hidden" asp-for="_Like" value="@Model._Like" />
            <input type="hidden" asp-for="MakaleStatus" value="@Model.MakaleStatus" />
            <input type="hidden" asp-for="MakaleResim" value="@Model.MakaleResim" />
            <label class="col-sm-12 col-md-2 col-form-label">Makale Resim</label>
            <input type="file" name="file"  accept="image/*" class="form-control">
            <label class="col-sm-12 col-md-2 col-form-label">Makale Başlik</label>
            <div class="col-sm-12 col-md-10">
                <input class="form-control" type="text" asp-for="MakaleBaşlik" placeholder="@Model.MakaleBaşlik" value="@Model.MakaleBaşlik">
                @Html.ValidationMessageFor(m => m.MakaleBaşlik, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-12 col-md-2 col-form-label">Açıklama</label>
            <div class="col-sm-12 col-md-10">
                <textarea class="form-control" asp-for="MakaleAciklama" type="text" placeholder="@Model.MakaleAciklama" value="@Model.MakaleAciklama" style="width:auto;height:auto;"></textarea>
                @Html.ValidationMessageFor(m => m.MakaleAciklama, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-12 col-md-2 col-form-label">Category</label>
            <div class="col-sm-12 col-md-10">
                <select asp-for="CategoryID" class="custom-select col-12">

                    @await Component.InvokeAsync("CategoryList")


                </select>
            </div>
        </div>
        <button type="submit">Kaydet</button>


    </form>
    
</div>

