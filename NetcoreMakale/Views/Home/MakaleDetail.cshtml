
@{
    ViewData["Title"] = "MakaleDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model EntityLayer.Makale




<section class="container">
    <div class="page-container">
        <div class="page-content">
            <div class="card">
                <div class="card-header pt-0">
                    <h3 class="card-title mb-4">@Model.MakaleBaşlik</h3>
                    <div class="blog-media mb-4">
                        <img src="~/MakaleImg/@Model.MakaleResim" alt="" class="w-100">

                    </div>
                    <small class="small text-muted">
                        <a href="#" class="text-muted">Yazar: @ViewBag.UserName</a>



                       
                            @Html.ActionLink("Like: " + Model._Like, "MakaleLike", new { makaleID = Model.MakaleID }, new
                       {
                           style = "Color:" + color(ViewBag.like)
                       })



                    </small>
                </div>
                <div class="card-body border-top">
                    <p class="my-3">@Model.MakaleAciklama</p>

                </div>

                <div class="card-footer">


                    @await Component.InvokeAsync("YorumGetir", new { makale = Model })


                    <h6 class="mt-5 mb-3 text-center"><a href="#" class="text-dark">Write Your Comment</a></h6>
                    <hr>
                    <form method="post" action="MakaleDetail" controller="Home">
                        <div class="form-row">
                            <div class="col-12 form-group">

                                <input type="hidden" id="custId" name="MakaleId" value="@Model.MakaleID">
                                <textarea name="yorum" id="" cols="30" rows="10" class="form-control" placeholder="Enter Your Comment Here"></textarea>
                            </div>
                            <div class="form-group col-12">
                                <button class="btn btn-primary btn-block" type="submit">Post Comment</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <!-- Sidebar -->
        <div class="page-sidebar">


            <div class="ad-card d-flex text-center align-items-center justify-content-center mt-4">
                <span href="#" class="font-weight-bold">ADS</span>
            </div>
        </div>
    </div>
</section>


@{
    string color(bool x)
    {
        if (x == false)
        {
            return "Black";
        }
        else
        {
            return "Blue";
        }
    }
}