@model List<EntityLayer.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="card-box mb-30">
    
    <div class="pb-20">
        <table class="data-table table stripe hover nowrap">
            <thead>
                <tr>
                    <th class="table-plus datatable-nosort">ID</th>
                    <th>Category Name</th>
                    <th>Category Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="table-plus">@item.CategoryID</td>
                        <td>@item.CategoryName</td>
                        <td>@item.CategoryStatus</td>

                        <td>

                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>

                        </td>
                        <td> <a class="dropdown-item" href="/Category/CategoryEdit/@item.CategoryID"><i class="dw dw-edit-2"></i> Edit</a></td>
                        <td><a class="dropdown-item" href="/Category/CategoryDelete/@item.CategoryID"><i class="dw dw-delete-3"></i> Delete</a></td>
                    </tr>
                }
              



            </tbody>
        </table>
        <a href="/Category/CategoryAdd" class="btn-success">Add User</a>
    </div>
</div>





