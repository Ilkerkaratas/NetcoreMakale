@model  List<EntityLayer.Yorum>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}




<div class="card-box mb-30">
    <div class="pd-20">
        <h4 class="text-blue h4">Data Table Simple</h4>
        <p class="mb-0">you can find more options <a class="text-primary" href="https://datatables.net/" target="_blank">Click Here</a></p>
    </div>
    <div class="pb-20">
        <table class="data-table table stripe hover nowrap">
            <thead>
                <tr>
                    <th class="table-plus datatable-nosort">ID</th>
                    <th>Text</th>
                    <th>Kullanıcı</th>
                    <th>Makale</th>
                    <th class="datatable-nosort">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="table-plus">@item.YorumID</td>
                    <td>@item.yorum_text</td>
                    @await Component.InvokeAsync("GetIDUserName", new { id = item.UserID })
                    @await Component.InvokeAsync("GetIDMakale", new { id = item.MakaleID })
                    <td>
                        <div class="dropdown">
                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                
                                <a class="dropdown-item" href="/Yorum/YorumDelete/@item.YorumID"><i class="dw dw-delete-3"></i> Delete</a>

                            </div>
                        </div>
                    </td>
                </tr>
                }




            </tbody>
        </table>
    </div>
</div>





